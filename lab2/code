#include <iostream>

int main()
{
    /*Вариант 5.
    Написать программу, которая получает на вход стороны прямоугольного параллелепипеда – 
    целые числа A,B,C (0<A,B,C<10^4). И рассчитывает его объем.*/
    setlocale(LC_ALL, "Rus");
    int A;
    int B;
    int C;
    std::cout << "Введите длины сторон параллелепипеда через пробел";
    std::cin >> A;
    std::cin >> B;
    std::cin >> C;
    if (A > 0 && A < pow(10, 4) && B > 0 && B < pow(10, 4) && C >0 && C < pow(10, 4))
    {
        int V = A * B * C;
        std::cout << "Объем прямоуголького параллелепипеда: " << V;
    }
    else {
        std::cout << "Вы ввели число меньше 0. Попробуйте еще!";
        return 1;
    }
    return 0;

}
